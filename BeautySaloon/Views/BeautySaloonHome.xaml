<Window x:Class="BeautySaloon.Views.BeautySaloonHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautySaloon.Views"
        mc:Ignorable="d"
        Title="BeautySaloonHome" Height="1000" Width="1500" FontSize="22" FontFamily="Tahoma">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="firstGridColumn" Width="200" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Image Source="/Assets/Images/beauty_logo.png" Margin="10" />

        <StackPanel Grid.Row="1" Margin="10">
            <Button Content="Услуги" Click="navigateToServices" Margin="0 10" Cursor="Hand" />
            <Button Content="Ближайшие записи" Click="goEntries" />            
        </StackPanel>

        <Frame x:Name="mainFrame" Grid.Column="1" Grid.RowSpan="2" />
    </Grid>
</Window>
